<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    tools:context=".categoryOptions">

    <LinearLayout
        android:id="@+id/top_bar_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:padding="5dp">
        <ImageButton
            android:id="@+id/back_arrow"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow"
            app:tint="@color/red"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:letterSpacing="0.1"
            android:textColor="@color/blue"
            android:text="Services"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/cartBtn"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/cart_icon"
            app:tint="@color/red"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/addService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_nav"
        android:background="@drawable/edit_text_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to Add Service"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="6dp" />

        <Button
            android:id="@+id/addServiceBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Service"
            android:layout_margin="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addService"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other services"
            android:letterSpacing="0.1"
            android:layout_marginTop="10dp"
            android:textColor="@color/orange"
            android:textSize="17sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/carRental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/carIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        app:tint="@color/orange"
                        android:src="@drawable/car_icon" />

                    <TextView
                        android:id="@+id/carTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car rental"
                        android:letterSpacing="0.1"
                        android:textColor="@color/orange"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/photographyIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/camera_icon" />
                    <TextView
                        android:id="@+id/photographyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photography"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/catering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/cateringIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/fastfood_icon" />
                    <TextView
                        android:id="@+id/cateringTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catering"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/costumes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/costumeIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/costume_icon" />
                    <TextView
                        android:id="@+id/costumeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Costumes"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paSystem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/paSystemIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/dj_icon" />
                    <TextView
                        android:id="@+id/paSystemTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sound system"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/decorations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/decoIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/deco_icon" />
                    <TextView
                        android:id="@+id/decoTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decorations"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentCreator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/contentIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/content_icon" />
                    <TextView
                        android:id="@+id/contentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Influencers"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sponsorship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/sponsorshipIcon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/sponsorship_icon" />
                    <TextView
                        android:id="@+id/sponsorshipTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sponsors"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <!-- Car Rental Service Details -->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/carRentalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Rental Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />
            <EditText
                android:id="@+id/pickUpLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pickup Location"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/dropOffLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Drop-off Location"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/pickUpDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pickup Date"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_margin="5dp" />

                <EditText
                    android:id="@+id/dropOffDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Drop-off Date"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_margin="5dp" />

            </LinearLayout>
            <Spinner
                android:id="@+id/car_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:entries="@array/Car_Rental"/>


        </LinearLayout>

        <!-- Photography Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/photographyDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photography Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />
            <EditText
                android:id="@+id/photography_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Location"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/photography_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Date"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/photography_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Number of Hours"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_bg" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Price per hour"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_bg" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photographers"
                    android:textSize="18sp"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/photographyRentalRv"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Catering Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/cateringDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catering Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/catering_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Location"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/catering_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Date"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/number_of_guests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Guests"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:entries="@array/catering_type"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catering Companies"
                    android:textSize="18sp"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cateringRv"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Costumes Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/costumesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumes Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/costume_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Costume Type"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Size"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costumes"
                    android:textSize="18sp"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/costumesRv"/>

            </LinearLayout>

        </LinearLayout>

        <!-- PA System and DJ Hire Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/paSystemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PA System and DJ Hire Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/dj_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Location"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/dj_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Date"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/dj_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration (Hours)"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dj and System Operators"
                    android:textSize="18sp"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DjRv"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Decorations Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/decorationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decoration Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/deco_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Location"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/deco_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Date"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/deco_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Hours"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />
            <EditText
                android:id="@+id/deco_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price per hour"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <!-- Content Creators Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contentCreatorsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content creators Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/creatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/creatorSocials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Socials"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/creator_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Hours"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />
            <EditText
                android:id="@+id/creator_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price per hour"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <!-- Sponsorship Service Details -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/sponsorshipDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponsorship Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/sponsor_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event category"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/sponsor_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current sponsors if any"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/sponsor_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event location"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />
            <EditText
                android:id="@+id/sponsor_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SponsorShip Amount"
                android:padding="10dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serviceTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service"
                android:padding="5dp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceRv"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>