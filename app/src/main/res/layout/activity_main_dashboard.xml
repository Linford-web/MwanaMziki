<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDashboard">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="@drawable/bg_views"
        android:backgroundTint="@color/my_primary">
    </View>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="9dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="Hi,"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/get_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/user_name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/round_bg"
            android:layout_gravity="end">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileTv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                app:tint="@color/yellow"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/word"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/words_layout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/first2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet event organizers"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/dark_blue"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/second3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first2"
                android:text="Manage services"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"
                android:letterSpacing="0.1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second3"
                android:text="Create and book events and services"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textColor="@color/dark_blue"
                android:textSize="11sp"
                android:letterSpacing="0.1"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_toEndOf="@id/words_layout3"
            android:src="@drawable/service" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:layout_below="@id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/menuRv"/>

    <ScrollView
        android:layout_below="@id/menuRv"
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:text="My Events"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/addEventsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/addEventBtn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:contentDescription="@string/events"
                    android:src="@drawable/add_icon"
                    app:tint="@color/blue"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage events and services with us!!"
                    android:letterSpacing="0.09"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:elevation="1dp"
                android:visibility="gone"
                android:layout_marginTop="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:id="@+id/eventsRecyclerView"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Adverts"
                android:letterSpacing="0.09"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/addAdvertTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/addAdvertBtn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:tint="@color/blue"
                    android:contentDescription="@string/adverts"
                    android:src="@drawable/add_icon"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advertise with Us!!"
                    android:letterSpacing="0.09"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/advertTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:elevation="1dp"
                android:visibility="gone"
                android:layout_marginTop="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:id="@+id/advertRv"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:itemIconTint="@drawable/item_selector"
        android:background="@drawable/bottom_view_bg"
        android:elevation="5dp"
        app:itemIconSize="30dp"
        android:fitsSystemWindows="true"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>