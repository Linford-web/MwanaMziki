<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainDashboard">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_views"
        android:backgroundTint="@color/yellow">
    </View>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:padding="9dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="Hi,"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/get_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/user_name"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileTv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:src="@drawable/profile_image"
                app:tint="@color/yellow"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_view"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp"
                    android:backgroundTint="@color/sky_blue"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/words_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/first2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meet event organizers"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/dark_blue"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/second3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first2"
                            android:text="Manage services"
                            android:textStyle="bold"
                            android:layout_margin="7dp"
                            android:textColor="@color/dark_blue"
                            android:textSize="16sp"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/second3"
                            android:text="Create and book events and services"
                            android:textStyle="bold"
                            android:layout_margin="3dp"
                            android:textColor="@color/dark_blue"
                            android:textSize="11sp"
                            android:letterSpacing="0.1"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:layout_toEndOf="@id/words_layout3"
                        android:src="@drawable/service" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_view"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/orange"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/words_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advertisement services"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:letterSpacing="0.09"/>
                        <TextView
                            android:id="@+id/second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first"
                            android:text="Anywhere any place"
                            android:textStyle="bold"
                            android:layout_margin="7dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:letterSpacing="0.09"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/second"
                            android:text="At affordable Prices"
                            android:textStyle="bold"
                            android:layout_margin="3dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:letterSpacing="0.1"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:layout_toEndOf="@id/words_layout"
                        android:src="@drawable/billboard"
                        app:tint="@color/red" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_view"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"
                    android:padding="8dp"
                    android:backgroundTint="@color/light_gray"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/words_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/first1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events services"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/second2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first1"
                            android:layout_margin="7dp"
                            android:letterSpacing="0.1"
                            android:text="Manage all created events"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/second2"
                            android:text="Create Events and Services"
                            android:textStyle="bold"
                            android:layout_margin="3dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:letterSpacing="0.1"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:layout_toEndOf="@id/words_layout2"
                        android:src="@drawable/events" />

                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/menuRv"/>

        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:text="My Events"/>
                            <ImageView
                                android:id="@+id/allEventsBtn"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/event_icon"
                                app:tint="@color/blue" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:id="@+id/eventsRecyclerView"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/edit_text_bg"
                            android:padding="10dp"
                            android:elevation="1dp"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="2dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    android:letterSpacing="0.1"
                                    android:text="@string/adverts"/>
                                <ImageView
                                    android:id="@+id/allAdvertsBtn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/billboard"
                                    app:tint="@color/blue" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advertise with Us!!"
                                android:letterSpacing="0.09"
                                android:textSize="16sp"
                                android:textColor="@color/red"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/addAdvertBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Add Advert"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Adverts"
                            android:letterSpacing="0.09"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:id="@+id/advertRv"/>


                    </LinearLayout>


                </ScrollView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>