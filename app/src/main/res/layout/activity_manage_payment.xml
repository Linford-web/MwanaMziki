<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".managePayment">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/my_primary"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/white">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:background="@drawable/edit_text_bg"
            android:backgroundTint="@color/orange"
            app:tint="@color/red"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Manage Payment"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:letterSpacing="0.1"
            android:textStyle="bold" />

        <ImageButton
            android:visibility="visible"
            android:id="@+id/walletBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:layout_gravity="end"
            android:background="@drawable/card_view"
            android:backgroundTint="@color/orange"
            android:src="@drawable/wallet_icon"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/balanceDisplay"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/edit_text_bg"
        android:layout_below="@id/top_toolbar"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:backgroundTint="@color/gray"
        android:elevation="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bigBalanceTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/Iconic"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:visibility="gone"
                android:id="@+id/userBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="$ 400.00"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:letterSpacing="0.1"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/bidderBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="$ 400.00"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:letterSpacing="0.1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pendingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/info_icon"
                        app:tint="@color/red"
                        android:padding="2dp"/>

                    <TextView
                        android:id="@+id/pendingTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textStyle="normal"
                        android:padding="2dp"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:letterSpacing="0.1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/completedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/success_icon"
                        app:tint="@color/blue"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textStyle="normal"
                        android:padding="2dp"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:letterSpacing="0.1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/Iconic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            app:tint="@color/red"
            android:padding="15dp"
            android:src="@drawable/cash_icon" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/afterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/balanceDisplay"
        android:padding="5dp"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pendingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:elevation="3dp"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/pendingBtnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:letterSpacing="0.1"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:elevation="3dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/confirmedBtnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:letterSpacing="0.1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/afterView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/pendings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pendingRv"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventRv"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmedRv"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>