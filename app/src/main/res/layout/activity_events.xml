<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".eventsActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/my_primary">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@android:color/white">

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/orange"
                app:tint="@color/red"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/events"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <ImageButton
                android:visibility="visible"
                android:id="@+id/searchEventsBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:background="@drawable/card_view"
                android:backgroundTint="@color/orange"
                android:src="@drawable/search_icon"/>

            <ImageButton
                android:visibility="gone"
                android:id="@+id/cancelBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/red"
                android:src="@drawable/close_icon"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/allLayoutPg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_view"
                android:elevation="3dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/allEventsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Events"
                    android:textStyle="normal"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:letterSpacing="0.09"
                    android:textColor="@color/orange"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bidEventsPg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/card_view"
                android:elevation="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bidEventTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bid Events"
                    android:textStyle="normal"
                    android:letterSpacing="0.09"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookedEventsPg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/card_view"
                android:layout_weight="1"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookEventTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked"
                    android:textStyle="normal"
                    android:padding="7dp"
                    android:letterSpacing="0.09"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:visibility="visible"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menuCategoryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:layout_marginStart="5dp"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textColor="@color/black" />
                        <ImageButton
                            android:visibility="gone"
                            android:id="@+id/cancelCategory"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="3dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/close_icon"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/red" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/categoriesRv"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eventsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="1dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:id="@+id/eventsRecyclerView"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/categoryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/categoryTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" events"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/categoryRecyclerView"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/displayEmptyRvLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_bg"
                        android:padding="20dp"
                        android:elevation="2dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:contentDescription="@string/events"
                            android:src="@drawable/empty_icon"
                            app:tint="@color/blue"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Empty Category!!"
                            android:letterSpacing="0.09"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Display events based on the Services provided by user -->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/userCategoryEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events for "
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/userCategoryTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category "
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textColor="@color/blue"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/userCategoryRv"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/displayEmptyRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_bg"
                        android:padding="20dp"
                        android:elevation="2dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/addEventBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:contentDescription="@string/events"
                            android:src="@drawable/event_icon"
                            app:tint="@color/blue"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Events to display yet!!"
                            android:letterSpacing="0.09"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/popularEventsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Events"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/eventRecyclerView"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/addEventsTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_bg"
                        android:padding="20dp"
                        android:elevation="2dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/addEventsBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:contentDescription="@string/events"
                            android:src="@drawable/add_icon"
                            app:tint="@color/blue"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manage events and services with us!!"
                            android:letterSpacing="0.09"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/allEventsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/allEventTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All Events"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/black"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/allRecyclerView"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Bid Events Linear layout -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bidEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Bid Events"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bidEventsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="View all"
                    android:letterSpacing="0.1"
                    android:padding="5dp"
                    android:textColor="@color/orange"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bidRecyclerView"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <!-- Booked Events Linear layout -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bookedEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Booked Events"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/bookedEventsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:layout_marginEnd="10dp"
                    android:letterSpacing="0.1"
                    android:padding="5dp"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/doneRecyclerView"
                android:layout_marginTop="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/bookedSvpRv"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/emptyBookedTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:elevation="2dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/addBookedService"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="@color/gray"
                    android:contentDescription="@string/adverts"
                    android:src="@drawable/empty_icon"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Booked Event!"
                    android:letterSpacing="0.09"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- search Events Linear layout -->
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/search_events_layout">

            <RelativeLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/event_name"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_bg"
                    android:layout_toStartOf="@id/search_icon"
                    android:elevation="2dp" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/search_icon"
                    android:src="@drawable/search_icon"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/card_view"
                    android:backgroundTint="@color/orange"
                    android:padding="5dp"
                    app:tint="@color/black"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchEventsRv"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/add_taskFBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:elevation="10dp"
        android:backgroundTint="@color/orange"
        app:tint="@color/black"
        android:importantForAccessibility="no">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>



