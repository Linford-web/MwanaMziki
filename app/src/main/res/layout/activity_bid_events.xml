<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bidEvents">
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/my_primary">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@android:color/white">

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                app:tint="@color/red"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/orange"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bid Events"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <ImageButton
                android:visibility="visible"
                android:id="@+id/searchEventsBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:background="@drawable/card_view"
                android:backgroundTint="@color/orange"
                android:src="@drawable/search_icon"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/cancelBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/red"
                android:src="@drawable/close_icon"/>


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/bidEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Bid Events"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookedEventsRv" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/searchBidEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Bid Events"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/event_name"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_bg"
                    android:layout_toStartOf="@id/search_icon"
                    android:elevation="2dp"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/search_icon"
                    android:src="@drawable/search_icon"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/card_view"
                    android:backgroundTint="@color/orange"
                    android:padding="5dp"
                    app:tint="@color/black"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bidSearchRv"
                android:padding="5dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>